	<!-- Your Page Content Here -->
	<!-- Default box -->
    <!-- /.box-body -->
	
	<div class="box box-info">
			<div class="box-header with-border">
				<h3 class="box-title">Enter Your Expenses </h3>
			</div>
            <!-- /.box-header -->
			<div class="container">
			
			<a href="/">Back</a>
	<form>
		Please choose the date: <input type="date" id="today" name="param" max="">
		<input type="submit" class="btn btn-info" onClick="getUrl()" value="Find Button">
	</form>
	<table style="width:90%" border="1" class="table table-bordered">
		
		<% if( Array.isArray(products) ) { %>
		<tr >
			<th>No</th>
			<th>Category</th>
			<th>Description</th>
			<th>Price</th>
			<th>Remove/Edit</th>
		</tr>
	<tbody align="center">
		<% var i=1,total=0; %>
		<%products.forEach( function( prd ){ %>
		
		<tr>
			<p hidden><%= prd._id %></p>
			<td><%= i++ %></td>			
			<td><%= prd.category %> </td>
			<td><%= prd.description %> </td>
			<td><%= prd.amount %><% total=total+prd.amount;%> </td>
			<td><a href="/remove_expenses/<%= prd._id %>">Remove</a></td>
		</tr>
		<% })}%>
	</tbody>
		<tr>
			<td align="right" colspan="4">Total</td>
			<td align="center">RM <%= total %></td>
		</tr>
	</table>
	
	
	<script>
		let today = new Date().toISOString().substr(0, 10);
		document.querySelector("#today").max= today;
		
		let today2 = today.value.toISOString().substr(0, 10);
		function getUrl()
        {
            return "/expense/"+today;
        }
	</script>
				
